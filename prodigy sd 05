import requests
from bs4 import BeautifulSoup
import pandas as pd

# URL of the website to scrape
url = "http://books.toscrape.com/catalogue/page-1.html"

# Lists to store scraped data
titles = []
prices = []
ratings = []

# Function to convert star-rating class to number
def convert_rating(class_name):
    rating_map = {
        'One': 1,
        'Two': 2,
        'Three': 3,
        'Four': 4,
        'Five': 5
    }
    for rating in rating_map:
        if rating in class_name:
            return rating_map[rating]
    return None

# Loop through first 3 pages for demo (you can expand)
for page in range(1, 4):
    print(f"Scraping page {page}...")
    page_url = f"http://books.toscrape.com/catalogue/page-{page}.html"
    response = requests.get(page_url)
    soup = BeautifulSoup(response.text, 'html.parser')

    books = soup.find_all('article', class_='product_pod')

    for book in books:
        # Title
        title = book.h3.a['title']
        titles.append(title)

        # Price
        price = book.find('p', class_='price_color').text.strip()
        prices.append(price)

        # Rating
        rating_class = book.p['class']
        rating = convert_rating(rating_class)
        ratings.append(rating)

# Create a DataFrame
data = pd.DataFrame({
    'Title': titles,
    'Price': prices,
    'Rating': ratings
})

# Save to CSV
data.to_csv('books_scraped.csv', index=False)
print("âœ… Data saved to 'books_scraped.csv'")
